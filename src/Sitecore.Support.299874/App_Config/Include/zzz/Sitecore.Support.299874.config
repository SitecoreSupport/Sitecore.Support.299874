<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="Standalone OR ContentManagement OR ContentDelivery">
      <linkManager>
           <providers>
              <add name="sitecore">
                  <patch:attribute name="type">Sitecore.Support.Links.LinkProvider, Sitecore.Support.299874</patch:attribute>
              </add>
              <add name="localizedProvider">
                  <patch:attribute name="type">Sitecore.Support.XA.Foundation.Multisite.LinkManagers.LocalizableLinkProvider, Sitecore.Support.299874</patch:attribute>
              </add>
          </providers>
      </linkManager>
      <settings>
          <setting name="Rendering.SiteResolving">
              <patch:attribute name="value">true</patch:attribute>
          </setting>
      </settings>
  </sitecore>
</configuration>